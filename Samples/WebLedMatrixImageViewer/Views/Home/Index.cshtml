@{
}

<form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Set">
    <div class="form-group">
        <div class="col-md-10">
            <p>@Html.DisplayTextFor(m => m.Brightness)</p>
            @Html.EditorFor(m => m.Brightness)
            <p class="danger">@Html.ValidationMessageFor(m => m.Brightness)</p>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <p>@Html.DisplayTextFor(m => m.File)</p>
            @Html.EditorFor(m => m.File)
            <p class="danger">@Html.ValidationMessageFor(m => m.File)</p>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <p>Send</p>
            <input type="submit" value="Set" />
        </div>
    </div>
    <img src="@Url.Action("CurrentImage")" alt="" />
</form>